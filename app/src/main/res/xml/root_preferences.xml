<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Server">

        <EditTextPreference
            app:key="protocol"
            app:title="Protocol"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="http" />

        <EditTextPreference
            app:key="address"
            app:title="Address"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="192.168.5.80" />

        <EditTextPreference
            app:key="port"
            app:title="Port"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="8000" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Requests">

        <EditTextPreference
            app:key="deactivation_timeout"
            app:title="Automatic Deactivator Timeout (Seconds)"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="21600"/>

    </PreferenceCategory>

</PreferenceScreen>
